<launch>
    <arg name="launch_prefix" default="" /> <!-- set to value="gdbserver localhost:10000" for remote debugging -->
    <arg name="node_namespace" default="apriltag_ros_continuous_node" />
    <arg name="model" default="husky"/>
    <arg name="camera_name" default="realsense/color" />
    <arg name="camera_frame" default="camera_realsense" />
    <arg name="image_topic" default="realsense/color/image_raw" />
    <!-- Set parameters -->
    <rosparam command="load" file="$(find dissertation_simulation)/config/settings.yaml" ns="$(arg node_namespace)" />
    <rosparam command="load" file="$(find dissertation_simulation)/config/tags.yaml" ns="$(arg node_namespace)" />
  
    <node pkg="apriltag_ros" type="apriltag_ros_continuous_node" name="$(arg node_namespace)" clear_params="true" output="screen" launch-prefix="$(arg launch_prefix)">
      <remap from="image_rect" to="$(arg image_topic)" />
      <remap from="camera_info" to="$(arg camera_name)/camera_info" />
      <param name="camera_frame" type="str" value="$(arg camera_frame)" />
      <param name="publish_tag_detections_image" type="bool" value="true" />      <!-- default: false -->
      <param name="publish_tf" type="bool" value="true" />
    </node>
  </launch>
  